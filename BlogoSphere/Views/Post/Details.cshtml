
@model BlogoSphere.Models.Post
@*@model IEnumerable<BlogoSphere.Models.Post>*@

@{
	Layout = null;
}

<div class="container pl-4">
	@if (Model != null)
	{
	<div class="row w-100 mb-2 shadow rounded" style="background-color: #f6f4e8;">
		<div class="d-inline-flex w-100">
			<div class="text-center p-2 text-uppercase"><a class="pl-3 h2 text-decoration-none" style="color: #e59560;" href=@Url.Action("Index", new { postid = Model.Id })>@Html.DisplayFor(modelItem => Model.Title)</a></div>
			<div class="ml-auto text-light p-2 mt-3 rounded-left" style="background-color: #1d3124;">Created @Model.Created</div> @*by @Model.Blog.Author.UserName</div>*@
		</div>
		<div class="bg-white m-0 p-3 w-100" style="max-height:100px;">
			<p class="textBody">@Model.Body</p>
		</div>
		<div class="w-100 p-1">
			<div class="text-right mt-0 pr-3" style="color: #e59560;">@Html.DisplayFor(modelItem => Model.Views) Views</div>
		</div>
	</div>
	}
</div>