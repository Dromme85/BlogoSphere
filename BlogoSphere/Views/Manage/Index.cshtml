@model BlogoSphere.Models.ApplicationUser
@{
	ViewBag.Title = "Manage Account";
}

<br />
<div class="text-center text-uppercase h2" style="color: #e59560;">@ViewBag.Title</div>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	@Html.HiddenFor(model => model.Id)

	<div class="container customCont pt-3 col-10">
		<div class="text-center h4" style="color: #e59560;">Change your account settings</div>
		<hr />
		<dl class="d-inline-flex row w-100">
			<dd class="text-right col-md-2">Password</dd>
			<dd class="col-md-10 pl-4">
				[
				@if (ViewBag.HasPassword)
				{
					@Html.ActionLink("Change your password", "ChangePassword")
				}
				else
				{
					@Html.ActionLink("Create", "SetPassword")
				}
				]
			</dd>
			<dd><p class="text-success">@ViewBag.StatusMessage</p></dd>
		</dl>
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group row">
			@Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "col-form-label col-md-2 text-md-right" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control col-md-8", @placeholder = "Title here ..." } })
				@Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group row">
			@Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "col-form-label col-md-2 text-md-right" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control col-md-8", @placeholder = "Title here ..." } })
				@Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group row">
			@Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "col-form-label col-md-2 text-md-right" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control col-md-8", @placeholder = "Title here ..." } })
				@Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group row">
			@Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-form-label col-md-2 text-md-right" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control col-md-8", @placeholder = "Title here ..." } })
				@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group row">
			@Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "col-form-label col-md-2 text-md-right" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control col-md-8", @placeholder = "Title here ..." } })
				@Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group row mt-3">
			<div class="offset-md-1 col-md-10 pb-3">
				<input type="submit" value="Confirm Changes" class="btn text-light" style="background-color: #1d3124" />
				<a href=@Url.Action("BrowseViews", "Browse") class="btn" style="background-color: #f6f4e8">Cancel</a>
			</div>
		</div>
	</div>
}
