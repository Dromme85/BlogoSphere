@{
	var cont = ViewContext.RouteData.Values["Controller"].ToString();
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - BlogoSphere!</title>
	@Styles.Render("~/Content/css")
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
	@Scripts.Render("~/bundles/modernizr")

</head>
<body class="pt-0">
	<div class="container pl-2">
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top container rounded-bottom">
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<a href="@Url.Action("Index", "Home")" class="navbar-brand">
				<img src="~/Content/images/bs-logo.png" width="30" /> BlogoSphere!
			</a>

			<div class="d-none d-lg-block d-xl-block"></div>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="nan navbar-nav mr-auto">
					@* Marks current controller as active *@
					<li class="nav-item @(cont == "Home" ? "active" : "")">
						<a>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</a>
					</li>
					<li class="nav-item @(cont == "Home" ? "active" : "")">
						<a>@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</a>
					</li>
					<li class="nav-item @(cont == "Home" ? "active" : "")">
						<a>@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</a>
					</li>
				</ul>
				@Html.Partial("_LoginPartial")
			</div>
		</nav>
	</div>

	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
