@model IEnumerable<BlogoSphere.Models.Blog>

@{
    ViewBag.Title = "Index";
}

<br /><br /><br />
<h2 style="color:coral">Blog  Page</h2>


<table class="table">
    
    @foreach (var item in Model)
    {
        <tr>
            <td width="15%">
                <a href=@Url.Action("Details", "Blog", new { id = item.Id } )>
                   
                        @Html.DisplayFor(modelItem => item.Title)
                    </a>
            </td>
            <td width="40%">
                 @Html.DisplayFor(modelItem => item.Body)
             </td>
            <td width="15%">
                @Html.DisplayFor(modelItem => item.Created)
               </td>
            <td width="30%">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "fa fa-edit" })
                @*@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "fa fa-align-justify" })*@
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "fa fa-trash" })
            </td>
        </tr>
    }

</table>
