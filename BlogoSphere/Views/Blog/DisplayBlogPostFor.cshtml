@model BlogoSphere.Models.SearchVM
@{
	ViewBag.Title = "DisplayBlogFor";
}

<h2 style="color:coral" class="pt-3 pb-3 text-center">Search Result</h2>

@* Search information *@
<div class="bg-info w-100 mb-3 p-2">@Model.BlogList.Count blogs and @Model.PostList.Count posts found matching "@Model.SearchText"</div>

<div class="row">
	<div class="col-6">
		<table border="0" style="background-color:lightgray" cellpadding="15" class="w-100">
			<tr>
				<th>Title</th>
				<th>Created</th>
			</tr>

			@if (Model.BlogList.Count() == 0)
			{
				<tr>
					<td colspan="3" class="text-danger">
						No matching blogs found.
					</td>
				</tr>
			}
			else
			{
				foreach (var item in Model.BlogList)
				{
					<tr>
						<td>
							<a href=@Url.Action("Details", "Blog", new { id = item.Id } )>@Html.DisplayFor(modelItem => item.Title)</a>
						</td>

						<td>@Html.DisplayFor(modelItem => item.Created)</td>
					</tr>
				}
			}
		</table>
	</div>
	<div class="col-6 w-100">
		<table border="0" style="background-color:lightgray" cellpadding="15" class="w-100">
			<tr>
				<th>Title</th>
				<th>Blog Name</th>
				<th>Created</th>
			</tr>

			@if (Model.PostList.Count() == 0)
			{
				<tr>
					<td colspan="3" class="text-danger">
						No matching posts found.
					</td>
				</tr>
			}
			else
			{
				foreach (var item in Model.PostList)
				{
					<tr>
						<td>
							<a href=@Url.Action("Index", "Post", new { Postid = item.Id } )>@Html.DisplayFor(modelItem => item.Title)</a>
						</td>
						<td>@Html.DisplayFor(modelItem => item.Blog.Title)</td>
						<td>@Html.DisplayFor(modelItem => item.Created)</td>
					</tr>
				}
			}

		</table>
	</div>
</div>
