@model BlogoSphere.Models.Blog

@{
    ViewBag.Title = "Create";
}
<br /> 
<h2 style="color:coral">Add New Blog </h2>
<style>
    textarea {
        width: 100%;
    }
</style>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal container customCont pt-3">
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="ml-3 form-group row">
        <div class="form-group bg-primary rounded">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="ml-3 form-group row">
        <div class="form-group bg-primary rounded" style="max-height:34px">
            @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Body, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Body, "", new { @class = " textarea" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Create" class="btn btn-dark" />
                <a href="@Url.Action("Index")" class="btn btn-warning">Cancel</a>
            </div>
        </div>
    </div>

    <div class="text-danger">@ViewBag.message</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
